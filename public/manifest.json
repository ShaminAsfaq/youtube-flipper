{
  "manifest_version": 3,
  "name": "React Extension",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "*://*/*",
        "*://localhost/*",
        "*://127.0.0.1/*",
        "*://[::1]/*"
      ]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "permissions": ["activeTab", "scripting", "storage", "alarms"]
}